<?xml version="1.0"?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>en_CA</default-locale>
            <supported-locale>en_CA</supported-locale>
            <supported-locale>fr_CA</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>com.g4w18.bundles.messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-outcome>resultPlus</from-outcome>
            <to-view-id>/search.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-outcome>resultOne</from-outcome>
            <to-view-id>/bookDetails.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>bookDetails</from-outcome>
            <to-view-id>/bookDetail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>shopping_cart</from-outcome>
            <to-view-id>/shopping_cart.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>inventory</from-outcome>
            <to-view-id>/management/inventory.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>reviews</from-outcome>
            <to-view-id>/management/reviews.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>banners</from-outcome>
            <to-view-id>/management/banners.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-outcome>resultEdit</from-outcome>
            <to-view-id>/management/managerBookEnRHandler.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>totalSales</from-outcome>
            <to-view-id>/management/reports/totalSales.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>totalSalesByClient</from-outcome>
            <to-view-id>/management/reports/totalSalesByClient.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>totalSalesByAuthor</from-outcome>
            <to-view-id>/management/reports/totalSalesByAuthor.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>totalSalesByPublisher</from-outcome>
            <to-view-id>/management/reports/totalSalesByPublisher.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>proceedToCheckout</from-outcome>
            <to-view-id>/checkout/payment_information.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
