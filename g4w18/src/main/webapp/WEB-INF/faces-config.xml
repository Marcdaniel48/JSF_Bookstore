<?xml version="1.0"?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>en_CA</default-locale>
            <supported-locale>en_CA</supported-locale>
            <supported-locale>fr_CA</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>com.g4w18.bundles.messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <navigation-case>
            <from-outcome>resultPlus</from-outcome>
            <to-view-id>/search.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-outcome>resultOne</from-outcome>
            <to-view-id>/bookdetails.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>
